<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="id.qq.driverquickqleen.DetailLaundry">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/primary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways"
        >
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:text="Pelanggan" />

    <android.support.v7.widget.CardView
        android:layout_below="@+id/toolbar"
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginStart="10dp"
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/p2"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFF"/>

            <GridLayout
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_toEndOf="@id/image"
                android:columnCount="2"
                android:rowCount="2">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Nama"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text=": Tamim"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Nomor Telepon"
                    />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text=": 081703434379"
                    android:textStyle="bold" />
            </GridLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:columnCount="2"
                android:rowCount="2">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Harga Antar"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"

                    />

                <TextView
                    android:id="@+id/hargaantar"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="IDR 12000"
                    android:textStyle="bold"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"
                    />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Total Harga"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"

                    />

                <TextView
                    android:id="@+id/totalharga"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:hint="IDR 62000"
                    android:textStyle="bold"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"
                    />
            </GridLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:text="Detail Laundry" />


    <android.support.v7.widget.CardView
        android:layout_below="@+id/toolbar"
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:columnCount="2"
                android:rowCount="5">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Cuci Bersih"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text=": 3 Kg"
                    android:textStyle="bold"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"
                    />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Cuci Basah"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"

                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text=": 5 Kg"
                    android:textStyle="bold"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"
                    />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Cuci Basah"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"

                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text=": 5 Kg"
                    android:textStyle="bold"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"
                    />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Total Berat"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"

                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text=": 13 Kg"
                    android:textStyle="bold"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"
                    />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Harga Berat"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"

                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text=": IDR 50000"
                    android:textStyle="bold"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:textSize="20sp"
                    />
            </GridLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>